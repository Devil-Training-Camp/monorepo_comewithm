{
    "github": {
      "release": true
    },
    "git": {
      "commitMessage": "build: v${version}"
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "after:bump": "echo npm publish success!"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  }